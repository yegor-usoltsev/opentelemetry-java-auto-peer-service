{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all",
    ":reviewer(yegor-usoltsev)"
  ],
  "schedule": [
    "on the 10th day of the month"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "maven"
      ],
      "versioning": "loose",
      "matchPackageNames": [
        "io.opentelemetry.javaagent:opentelemetry-javaagent-extension-api{/,}**"
      ]
    }
  ]
}
